@page "/"
<!-- 42 FTW! -->
<PageTitle>Most Impressive Comic Emporium on the Internet</PageTitle>
<section class="comic-stage">
    <div class="starfield" aria-hidden="true"></div>
    <div class="halftone" aria-hidden="true"></div>

    <div class="comic-grid">
        <article class="panel hero-panel">
            <div class="badge-row">
                <span class="badge">Issue #42</span>
                <span class="badge">Collectors Only</span>
                <span class="badge">Holographic Foil</span>
            </div>

            <h1 class="comic-headline">
                <span>Most Impressive</span>
                <span>Comic Emporium on the Internet</span>
            </h1>

            <p class="comic-monologue">
                Greetings, humble browsers of the multiverse. You have arrived at the premier comic book store
                website. Please, try to contain your awe while exploring treasures clearly far beyond the comprehension of
                the average fan.
            </p>

            <div class="persona-toggle" role="group" aria-label="Choose your oracle">
                <span class="persona-label">Choose your oracle</span>
                <div class="persona-buttons">
                    <button type="button"
                            class="@GetPersonaButtonClass(ChatPersona.ComicBookGuy)"
                            @onclick="@(() => SetPersona(ChatPersona.ComicBookGuy))">
                        Comic Book Guy
                    </button>
                    <button type="button"
                            class="@GetPersonaButtonClass(ChatPersona.Assistant)"
                            @onclick="@(() => SetPersona(ChatPersona.Assistant))">
                        Sane Assistant
                    </button>
                </div>
            </div>

            <div class="cta-row">
                <input class="hero-input"
                       placeholder="Ask the snark overlords anything."
                       @bind="_question"
                       @bind:event="oninput" />
                <button type="button" @onclick="AskAi">Ask Question</button>
            </div>

            @if (!string.IsNullOrWhiteSpace(_answer))
            {
                <div class="answer-board" aria-live="polite">
                    <p>@_answer</p>
                </div>
            }
        </article>

        <aside class="panel vibe-panel">
            <div class="speech-bubble">Certified 110% snark powered.</div>
            <div class="pow-burst">KAPOW!</div>
            <div class="collection-stats">
                <span>Ultra-Rare<br />Stuff</span>
                <span>Signed<br />Holo Covers</span>
                <span>Mint-In-Box<br />Artifacts</span>
                <span>Hyper-Limited<br />Zines</span>
            </div>
        </aside>
    </div>
</section>
